# Voice Cloning Backend Configuration
# Copy this file to .env and customize

# Application
APP_NAME=Voice Cloning API
APP_VERSION=1.0.0
DEBUG=True

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# Database
DATABASE_URL=sqlite:///./data/voice_cloning.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/voicecloning

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# CORS - Add your frontend URLs
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# File Upload
MAX_FILE_SIZE_MB=100

# Worker Configuration
MAX_CONCURRENT_JOBS=1
JOB_TIMEOUT=3600

# Cleanup
CLEANUP_ENABLED=True
CLEANUP_DAYS=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/backend.log
